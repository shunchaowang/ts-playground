{
    "compilerOptions": {
        "outDir": "./dist/",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "allowJs": true
    },
    "include": ["src/**/*"],
    "exclude": [
        "**/*.spec.ts",
        "node_modules"
    ]
}